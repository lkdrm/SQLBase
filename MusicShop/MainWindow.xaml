<ui:FluentWindow x:Class="MusicShop.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 Title="Music Shop" Height="500" Width="800"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        Background="{DynamicResource ApplicationBackgroundBrush}"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Grid Margin="20,0,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ui:TitleBar Grid.Row="0" Title="Music Shop" Margin="0,0,0,10"/>

        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Song catalog" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>

            <ui:TextBox x:Name="SearchBox" Grid.Column="1" Margin="20,0" PlaceholderText="Search by title or artist..." TextChanged="SearchBox_TextChanged" VerticalAlignment="Center"/>

            <ui:Button Grid.Column="2" Content="Theme" Appearance="Secondary" Click="ThemeButton_Click" VerticalAlignment="Center"/>
        </Grid>

        <DataGrid x:Name="SongsGrid" Grid.Row="2" AutoGenerateColumns="True" IsReadOnly="True" HeadersVisibility="Column"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <ui:Button Content="Delete" Appearance="Secondary" Margin="0,0,10,0" Click="DeleteSong_Click"/>
            <ui:Button Content="Add song" Appearance="Secondary" Margin="0,0,10,0" Click="AddSong_Click"/>
            <ui:Button Content="Buy" Appearance="Primary" Click="BuySong_click"/>
        </StackPanel>
    </Grid>
</ui:FluentWindow>